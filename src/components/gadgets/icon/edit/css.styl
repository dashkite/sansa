form
  --copy-font-size var(--small-copy-font-size)
  --copy-line-height var(--small-copy-line-height)

div.icon.field
  label > div
    display flex
    flex-flow column
    gap 1rem

div:has([name="term"])
  grid-column span 2

.preview
  width fit-content
  padding 0.25rem

  &::empty
    border 1px solid var(--warn)

  & > i
    font-size 4rem
    line-height 4rem
