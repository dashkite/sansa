          label
            span Name
            input(
              name = "name"          
              type = "text"
              required = "true"
              value = name
            )
        .field
          label
            span Title
            input(
              name = "title"          
              type = "text"
              value = title
            )
        .field
          label
            span Icon
            input(
              name = "icon"          
              type = "text"
              value = icon
            )
        .field 
