form
  gap 0.75rem

  & > nav
    display flex
    flex-flow row
    justify-content space-between
    
    // & > button
    //   padding 0.5rem
    //   border 1px solid var(--highlight)
    //   border-radius 0.5rem

    //   &:disabled
    //     opacity 0.25


.step 
  flex-flow column
  gap 0.5rem

  & > nav
    display flex
    flex-flow column
    gap 0.5rem

    &:not(:first-child)
      flex-flow row
      justify-content end


  &[data-state="uploading"]
    & > label
      display flex
      flex-flow column
      gap 0.5rem

      & > progress
        height 2rem
        width 100%
        -webkit-appearance none
        -moz-appearance none
        appearance none
        border 1px solid var(--highlight)
        border-radius 0.5rem
        background var(--background)

        &::-moz-progress-bar
          border-radius 0.5rem
          background var(--highlight)

        &::-webkit-progress-bar
          // height 2rem
          // width 100%
          border-radius 0.5rem
          background var(--background)

        &::-webkit-progress-value
          border-radius 0.5rem
          background var(--highlight)



button[name="browse files"]
  width 100%
input[type="file"]
  display none

vellum-autocomplete[name="term"]
  div[slot="option"]
    display flex
    flex-flow column
    padding 0.5rem
    gap 0.25rem
    align-items center
    border-radius 0.25rem
    background var(--background)
    span
      padding 0.5rem
      color var(--foreground)
      --copy-font-size var(--smaller-copy-font-size)
      --copy-line-height var(--smaller-copy-line-height)

  &::part(options)
    max-block-size 32rem
